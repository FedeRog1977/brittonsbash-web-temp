{
  "description": "BrittonsBash Web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-s build:tsc build:scss build:css build:css-bundle build:next",
    "build:css-bundle": "run-s --silent build:css-bundle:1 build:css-bundle:2",
    "build:css-bundle:1": "mkdir -p ./dist",
    "build:css-bundle:2": "node ./concat-files.js \"./build/css-modules/libs/components/basics/{components,reference}/**/*.css\" --output ./src/app/styles.css",
    "build:css": "postcss ./build/css --dir ./build/css-modules/libs/components/basics --base ./build/css",
    "build:scss": "sass --no-source-map ./src:./build/css",
    "build:next": "next build",
    "build:tsc": "tsc",
    "clean": "rimraf ./node_modules",
    "dev": "next dev",
    "format:check": "prettier --ignore-path ./.gitignore --check .",
    "format:fix": "prettier --ignore-path ./.gitignore --list-different --write .",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.2.1",
    "@fortawesome/free-solid-svg-icons": "6.2.1",
    "@fortawesome/react-fontawesome": "0.2.0",
    "ajv": "8.17.1",
    "ajv-errors": "3.0.0",
    "classnames": "2.3.2",
    "image-thumbnail": "1.0.17",
    "next": "15.3.2",
    "react-scripts": "5.0.1",
    "react": "18.3.0-canary-3bcd2de01-20240227",
    "react-dom": "18.3.0-canary-3bcd2de01-20240227",
    "react-hook-form": "7.55.0",
    "react-lazy-load-image-component": "1.6.0",
    "react-markdown": "8.0.7",
    "react-modal": "3.16.1",
    "redis": "5.8.2",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@types/image-thumbnail": "1.0.4",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.19",
    "@types/react-lazy-load-image-component": "1.6.0",
    "@types/react-modal": "3.16.0",
    "command-line-args": "5.2.1",
    "eslint": "8.41.0",
    "glob": "10.3.1",
    "husky": "8.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.24",
    "postcss-cli": "10.1.0",
    "postcss-modules": "6.0.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "sass": "1.64.1",
    "webpack": "5.89.0"
  },
  "prettier": "./src/config/prettier/index.cjs"
}
